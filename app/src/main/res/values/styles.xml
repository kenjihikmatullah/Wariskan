<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="android:actionBarSize">0dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="actionBarSize">0dp</item>
    </style>

    <style name="App.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aller</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Deceased -->
    <style name="header_text" parent="match_wrap">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="row_layout" parent="wrap_wrap">
    </style>
    <style name="row_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="row_title" parent="wrap_wrap">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="row_body" parent="wrap_wrap">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Add Edit -->
    <style name="addedit_row_layout" parent="match_wrap">
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="addedit_row_label" parent="wrap_wrap">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
    <style name="addedit_row_guideline" parent="wrap_wrap">
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.5</item>
    </style>
    <style name="addedit_row_spinner" parent="wrap_wrap">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!-- Main -->
    <style name="inheritance_item_ic">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- Heir Item -->
    <style name="heir_item_details_title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="heir_item_details_body">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Legacy -->
    <style name="legacy_stats_body">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
