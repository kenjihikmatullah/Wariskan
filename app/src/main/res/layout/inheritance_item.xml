<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="inheritance"
            type="com.kenji.waris.database.Inheritance" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Pic -->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:gender="@{inheritance.deceased.gender}"
            tools:src="@drawable/ic_muslim"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Name -->
        <TextView
            android:id="@+id/name_tv"
            android:text="@{inheritance.deceased.name}"
            tools:text="@string/full_name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            app:layout_constraintLeft_toRightOf="@id/profile_iv" />

        <ImageView
            android:id="@+id/menu"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/menu_vertical" />

